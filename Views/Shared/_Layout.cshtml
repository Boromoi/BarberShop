<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <script src="https://kit.fontawesome.com/c2553663f4.js" crossorigin="anonymous"></script>
    <link rel=”stylesheet” href=”~/lib/bootstrap/dist/css/bootstrap.css”>
    <link rel=”stylesheet” href=”~/lib/bootstrap/dist/css/bootstrap-responsive.css”>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @*NavBar*@
        @*<li class="<%:Page.Title==" About"?"active":""%>">
            <a runat="server" href="~/About.aspx">About</a>
        </li>*@
        @*<li class="nav-item">*@
        <div class="sizecontainer">
            <nav class="navbar navbar-expand-md navbar-dark sticky-top">
                <div class="container-fluid">
                    <img src="~/assets/images/logoKlein.jpg" class="navbar-brand" />
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    
        @*
            Footer
        *@
    <footer>
        <div class="inner_footer">
            <div class="logo_container">
                <img src="~/assets/images/logoGroot.jpg" alt="logo"/>
            </div>

            <div class="footer_third">
                <h1>Need help?</h1>
                <a href="#">Terms &amp; Conditions</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>

            <div class="footer_third">
                <h1>More</h1>
                <a href="#">Store</a>
                <a href="#">Appointment</a>
                <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
            </div>

            <div class="footer_third">
                <h1>Follow us</h1>
                <li><a href="http://facebook.com/"><i class="fa fa-facebook"></i></a></li>
                <li><a href="http://twitter.com/"><i class="fa fa-twitter"></i></a></li>
                <li><a href="http://instagram.com/"><i class="fa fa-instagram"></i></a></li>

                <span>
                    &copy; Barbershop<br>
                    Netherlands - Amsterdam<br>
                    Reguliersgracht 95<br>
                    1017 LN
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
